<!DOCTYPE html>
<html>
<head>
  <title>Batalkan Pembelian</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container">
  <h1 class="mt-4">Batalkan Pembelian</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Produk</th>
        <th>Jumlah</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% pembelian.forEach(p => { %>
        <tr>
          <td><%= p.nama %></td>
          <td><%= p.jumlah %></td>
          <td><%= p.status %></td>
        <td>
        <% if(p.status === 'aktif'){ %>
          <form method="POST" action="/cancel/<%= p.id %>">
            <button type="submit">Batalkan</button>
          </form>
        <% } %>
      </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
