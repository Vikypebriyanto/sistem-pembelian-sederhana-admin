<!DOCTYPE html>
<html>
<head>
  <title>Admin Toko</title>
  <link rel="stylesheet" href="public/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body class="container">
  <h1 class="mt-4">Daftar Produk</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Nama</th>
        <th>Harga</th>
        <th>Stok</th>
      </tr>
    </thead>
    <tbody>
      <% produk.forEach(p => { %>
        <tr>
          <td><%= p.nama %></td>
          <td><%= p.harga %></td>
          <td><%= p.jumlah %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  
  <a href="/pembelian" class="btn btn-primary">Tambah Pembelian</a>
  <a href="/cancel" class="btn btn-success">Batalkan Pembelian</a>
  <a href="/chatbot" class="btn btn-warning">Buka Chatbot</a> <!-- Tombol chatbot -->
</body>
</html>
